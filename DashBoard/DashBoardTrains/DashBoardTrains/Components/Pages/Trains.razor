@page "/trains"
@using DashBoardTrains.Models
@inject IConfiguration config

<PageTitle>Trains</PageTitle>


<EditForm Model="@categoria" OnSubmit="InserisciCategoria">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3 row align-items-center">
        <label for="categoriaName" class="col-sm-2 col-form-label">Identifier:</label>
        <div class="col-sm-6">
            <InputText id="categoriaName" class="form-control" @bind-Value="@categoria.Name" placeholder="Inserisci il nome della categoria" />
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </div>
    </div>
</EditForm>


<table class="table table-striped table-hover mb-0 text-center align-middle">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Nome Categoria</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in categories)
        {
            <tr>
                <td>@team.Id</td>
                <td>@team.Name</td>
                <td>
                    <button class="btn btn-danger btn-sm px-3"
                            title="Elimina categoria"
                            @onclick="() => EliminaCategoria(team.Id)">
                        X
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>





