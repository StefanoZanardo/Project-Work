@page "/"
@using Microsoft.AspNetCore.Components.QuickGrid
@using DashBoardTrains.Models.MockUp_Models
@using static DashBoardTrains.Models.MockUp_Models.Scelta
@inject DbFalso Db

@if(isAlertVisible)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @alertMessage
        <button type="button" class="btn-close" aria-label="Close" @onclick="() => isAlertVisible = false"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5 class="mb-0">Aggiungi una Scelta</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label for="tipoSelect" class="form-label">Seleziona Tipo</label>
                <select id="tipoSelect" class="form-select" @onchange="OnTipoChanged">
                    <option value="Entrate">Entrate</option>
                    <option value="Uscite">Uscite</option>
                    <option value="Department">Department</option>
                </select>
            </div>

            <EditForm Model="@scelta" OnSubmit="SubmitForm">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    @if (scelta is Entrate e)
                    {
                        <div class="col-md-6">
                            <label class="form-label">Amount</label>
                            <InputNumber @bind-Value="e.Amount" class="form-control"/>
                        </div>
                    }
                    else if (scelta is Uscite u)
                    {
                        <div class="col-md-6">
                            <label class="form-label">Amount</label>
                            <InputNumber @bind-Value="u.Amount"  class="form-control" />
                        </div>
                    }
                    else if (scelta is Department d)
                    {
                        <div class="col-md-6">
                            <label class="form-label">Nome</label>
                            <InputText @bind-Value="d.Name"  class="form-control" placeholder="Nome" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Descrizione</label>
                            <InputText @bind-Value="d.Description" class="form-control" placeholder="Descrizione" />
                        </div>
                    }
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Elenco Scelte</h5>
        </div>
        <div class="card-body p-0">

                @if (scelta.TypeForm == "Entrate")
                {
                    <QuickGrid Class="table table-striped mb-0" Items="@Db.entrate.AsQueryable()" ItemKey="@(x => x.Id)">
                        <PropertyColumn Title="Amount" Property="@(p => ((Entrate)p).Amount)" Sortable="true" />
					    <PropertyColumn Title="Date" Property="@(p => ((Entrate)p).CreatedAt)" Format="yyyy-MM-dd HH:mm" Sortable="true" />
                    </QuickGrid>
                }
                else if (scelta.TypeForm == "Uscite")
                {
                    <QuickGrid Class="table table-striped mb-0" Items="@Db.uscite.AsQueryable()" ItemKey="@(x => x.Id)">
                        <PropertyColumn Title="Amount" Property="@(p => ((Uscite)p).Amount)" Sortable="true" />
					    <PropertyColumn Title="Date" Property="@(p => ((Uscite)p).CreatedAt)" Format="yyyy-MM-dd HH:mm" Sortable="true" />
                    </QuickGrid>
                }
                else if (scelta.TypeForm == "Department")
                {
                    <QuickGrid Class="table table-striped mb-0" Items="@Db.departments.AsQueryable()" ItemKey="@(x => x.Id)">
                        <PropertyColumn Title="Name" Property="@(p => ((Department)p).Name)" Sortable="true" />
                        <PropertyColumn Title="Description" Property="@(p => ((Department)p).Description)" Sortable="true" />
					    <PropertyColumn Title="Date" Property="@(p => ((Department)p).CreatedAt)" Format="yyyy-MM-dd HH:mm" Sortable="true" />
                    </QuickGrid>
                }
      
        </div>
    </div>
</div>


@code {
	private bool isAlertVisible = false;
	private string alertMessage = string.Empty;
    private string tipoCorrente = "Entrate"; 
    private Scelta scelta = new Entrate();


    private IEnumerable<Scelta> scelte => tipoCorrente switch
    {
        "Entrate" => Db.entrate.AsQueryable(),
        "Uscite" => Db.uscite.AsQueryable(),
        "Department" => Db.departments.AsQueryable(),
        _ => Db.entrate
    };


    private void OnTipoChanged(ChangeEventArgs e)
    {
        tipoCorrente = e.Value?.ToString() ?? "Entrate";
        scelta = CreaNuovaScelta(tipoCorrente);
    }

    private async Task SubmitForm()
    {
        try
        {
            await Db.AddSceltaAsync(scelta);
            scelta = CreaNuovaScelta(tipoCorrente);
            StateHasChanged();
        }
        catch (Exception ex)
        {
			isAlertVisible = true;
			alertMessage = ex.Message;
        }
    }
    private Scelta CreaNuovaScelta(string tipo) => tipo switch
    {
        "Entrate" => new Entrate(),
        "Uscite" => new Uscite(),
        "Department" => new Department(),
        _ => new Entrate()
    };
}